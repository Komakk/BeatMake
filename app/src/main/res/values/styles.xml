<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"  parent="Theme.AppCompat">

        <!-- Customize your theme here. -->
        <item name="android:buttonStyleToggle">@style/FQToggleButton</item>
        <item name="colorPrimary">@color/material_dark</item>
    </style>


    <style
        name="FQToggleButton"
        parent="@android:style/Widget.Button.Toggle">
        <item
            name="android:textColor">#FFFFFFFF</item>
        <item
            name="android:shadowColor">#FF000000</item>
        <item
            name="android:shadowDx">0</item>
        <item
            name="android:shadowDy">-1</item>
        <item
            name="android:shadowRadius">0.2</item>
        <item
            name="android:textSize">18sp</item>
        <item
            name="android:background">@drawable/custom_button</item>
        <item
            name="android:focusable">true</item>
        <item
            name="android:clickable">true</item>
    </style>

</resources>
